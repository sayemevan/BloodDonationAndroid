<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/allbdShowBloodGroup"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="AB+"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/allbdShowName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="user name"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/allbdShowPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="phone"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:id="@+id/allbdShowLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@drawable/ic_location"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="5dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/allbdShowStatus"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="Can't Donate Now"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="2dp"
                        android:paddingLeft="5dp"
                        />
                    <TextView
                        android:id="@+id/allbdShowDetails"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_forward"
                        android:textStyle="normal"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@android:color/white"
                        />
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

</LinearLayout>