<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/donorImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/facebookprofile"
            android:background="@android:color/white"
            android:padding="3dp"
            android:layout_margin="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/donorBloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/donorTotalDonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Donate"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/donorLastDonate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LastDonate"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>

            <TextView
                android:id="@+id/donorNextDonateLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Donate Left"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="1dp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/bloodherro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Donor"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/square_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/donorStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/donorEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:drawableLeft="@drawable/ic_email"
                android:textSize="16sp"
                android:text="@string/email"
                android:padding="5dp"
                android:drawablePadding="10dp"
                />
            <TextView
                android:id="@+id/donorPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/profile_phone"
                android:textSize="16sp"
                android:text="@string/contactno"
                android:padding="5dp"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/donorBirthDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/profile_birthdate"
                android:textSize="16sp"
                android:text="@string/dateofBirth"
                android:padding="5dp"
                android:drawablePadding="10dp"
                />

            <TextView
                android:id="@+id/donorGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/profile_gender"
                android:textSize="16sp"
                android:text="@string/gender"
                android:padding="5dp"
                android:drawablePadding="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/profile_address"
                android:textSize="16sp"
                android:text="@string/address"
                android:padding="5dp"
                android:drawablePadding="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/donorArea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/areaName"
                    />

                <TextView
                    android:id="@+id/donorThana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textSize="16sp"
                    android:text="@string/thana"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/donorDistric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="@string/district"
                    />
                <TextView
                    android:id="@+id/donorDivision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:text="@string/division"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/donorSendEmail"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Email"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="5dp"
                android:layout_marginRight="1dp"/>
            <TextView
                android:id="@+id/donorMakeCall"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Call"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:padding="5dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>